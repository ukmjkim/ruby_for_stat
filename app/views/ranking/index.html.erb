<h1>Listing Ranking</h1>

<%= link_to 'New ranking', new_ranking_path %> 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>
 
  <% @rankings.each do |ranking| %>
    <tr>
      <td><%= ranking.title %></td>
      <td><%= ranking.text %></td>
      <td><%= link_to 'Show', ranking_path(ranking) %></td>
      <td><%= link_to 'Edit', edit_ranking_path(ranking) %></td>
      <td><%= link_to 'Destroy', ranking_path(ranking), method: :delete,
				data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
